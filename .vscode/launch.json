{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickJavaProcess}",
            "suppressMultipleSessionWarning": true
        },
        {
            "type": "java",
            "name": "Attach jobapi",
            "request": "attach",
            "hostName": "localhost",
            "port": "32102"
        },
        {
            "type": "java",
            "name": "Attach proxy",
            "request": "attach",
            "hostName": "localhost",
            "port": "32101"
        },
        {
            "type": "java",
            "name": "Attach localstack",
            "request": "attach",
            "hostName": "localhost",
            "port": "5050"
        },
        {
            "type": "java",
            "name": "CodeLens (Launch) - OpenApiGenerator",
            "request": "launch",
            "mainClass": "com.here.xyz.hub.util.OpenApiGenerator",
            "projectName": "xyz-hub-service",
            "args": [
                "-d",
                "xyz-hub-service\\src\\main\\resources\\openapi.yaml",
                "xyz-hub-service\\src\\main\\resources\\openapi-recipes.yaml",
                "stable",
                "o.yaml"
            ]
        },
        {
            "type": "java",
            "name": "xyzhub-service",
            "request": "launch",
            "mainClass": "com.here.xyz.hub.Service",
            "projectName": "xyz-hub-service",
            "vmArgs": "-Xms1280m -Xmx1280m",
            "args": [
                "--xxdebug"
            ],
            "envFile": "${workspaceFolder}${pathSeparator}.vscode${pathSeparator}xyzhub-service.env-vars.txt",
            "env": {},
            "sourcePaths": []
        },
        {
            "type": "java",
            "name": "JobService",
            "request": "launch",
            "mainClass": "com.here.xyz.jobs.service.JobService",
            "projectName": "xyz-job-service",
            "vmArgs": "-Xms1280m -Xmx1280m",
            "args": [
                "--xxdebug"
            ],
            "envFile": "${workspaceFolder}${pathSeparator}.vscode${pathSeparator}JobService.env-vars.txt",
            "env": {},
            "sourcePaths": []
        }
    ],
    "compounds": [
        {
            "name": "attach iml",
            "configurations": ["Attach jobapi","Attach proxy"],
            "stopAll": true
        },
        {
            "name": "job2-suite",
            "configurations": ["xyzhub-service","JobService"],
            "stopAll": true
        },
        {
            "name": "all-jobs-suite",
            "configurations": ["xyzhub-service","JobService"],
            "stopAll": true
        }
    ]
}