{
  "configuration": {
    "status": "info",
    "name": "Default Log Config",
    "packages": "com.here.xyz",
    "appenders": {
      "RollingRandomAccessFile": {
        "name": "RollingFile-Appender",
        "fileName": "${env:LOG_PATH}/trace.log.0",
        "filePattern": "${env:LOG_PATH}/trace.log.%i",
        "PatternLayout": {
          "MarkerPatternSelector": {
            "defaultPattern": "{\"time\":\"%d{ISO8601}\",\"t\":\"%p\",\"unixtime\":\"%d{UNIX_MILLIS}\",\"msg\":\"%enc{%.-4096msg%ex}{JSON} \",\"streamId\":\"%marker\",\"src\":\"%c\"}%n%xEx{none}",
            "PatternMatch": {
              "key": "ACCESS",
              "pattern": "%m%n"
            }
          }
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "64 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "2"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "warn",
        "AppenderRef": {
          "ref": "RollingFile-Appender"
        }
      }
    }
  }
}
