{
  "configuration": {
    "status": "info",

    "name": "Default Log Config",
    "packages": "com.here.xyz",

    "ThresholdFilter": {
      "level": "info"
    },
    "CustomLevels": {
      "CustomLevel": [{
        "name": "STREAM",
        "intLevel": 350
      }]
    },
    "appenders": {
      "RollingRandomAccessFile": {
        "name": "RollingFile-Appender",
        "fileName": "${env:LOG_PATH}/trace.log.0",
        "filePattern": "${env:LOG_PATH}/trace.log.%i",
        "PatternLayout": {
          "MarkerPatternSelector": {
            "defaultPattern": "{\"t\":\"%p\",\"time\":\"%d{ISO8601}\",\"unixtime\":\"%d{UNIX_MILLIS}\",\"msg\":\"%enc{%.-4096msg}{JSON}\",\"streamId\":\"%marker\"}%n%xEx{none}",
            "PatternMatch": {
              "key": "ACCESS",
              "pattern": "%m%n"
            }
          }
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "64 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "2"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "info",
        "AppenderRef": {
          "ref": "RollingFile-Appender"
        }
      }
    }
  }
}
