{
  "configuration": {
    "status": "info",
    "name": "Default Log Config",
    "packages": "com.here.xyz"
  },
  "appenders": {
    "RollingRandomAccessFile": [
      {
        "name": "DefaultAppender",
        "fileName": "${env:LOG_PATH}/trace.log.0",
        "filePattern": "${env:LOG_PATH}/trace.log.%i",
        "PatternLayout": {
          "MarkerPatternSelector": {
            "defaultPattern": "{\"t\":\"%p\",\"time\":\"%d{ISO8601}\",\"unixtime\":\"%d{UNIX_MILLIS}\",\"msg\":\"%enc{%.-4096msg%ex}{JSON} \",\"streamId\":\"%marker\",\"src\":\"%c{1}\"}%n%xEx{none}",
            "PatternMatch": {
              "key": "ACCESS",
              "pattern": "%m%n"
            }
          }
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "64 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "2"
        }
      },
      {
        "name": "AccessLogAppender",
        "fileName": "${env:LOG_PATH}/access.log.0",
        "filePattern": "${env:LOG_PATH}/access.log.%i",
        "PatternLayout": {
          "pattern": "%m%n"
        },
        "MarkerFilter": {
          "marker": "ACCESS",
          "onMatch": "ACCEPT",
          "onMismatch": "DENY"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "64 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "2"
        }
      }
    ],
    "Console": {
      "name": "STDOUT",
      "PatternLayout": {
        "pattern": "%m%n"
      }
    }
  },
  "loggers": {
    "root": {
      "level": "info",
      "includeLocation": true,
      "AppenderRef": [
        {
          "ref": "STDOUT"
        },
        {
          "ref": "DefaultAppender"
        },
        {
          "ref": "AccessLogAppender"
        }
      ]
    }
  }
}
