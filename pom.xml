  <repositories>
    <repository>
      <id>boundless</id>
      <layout>default</layout>
      <name>boundless-repo</name>
      <releases>
        <checksumPolicy>warn</checksumPolicy>
        <enabled>true</enabled>
      </releases>
      <url>https://repo.boundlessgeo.com/main/</url>
    </repository>

    <repository>
      <id>geomajas</id>
      <layout>default</layout>
      <name>geomajas-repo</name>
      <releases>
        <checksumPolicy>warn</checksumPolicy>
        <enabled>true</enabled>
      </releases>
      <url>http://maven.geomajas.org/</url>
    </repository>
  </repositories>

</project>
